<UserControl x:Class="AppSolutions.Desktop.Designer.UI.DocumentControls.Layouting.ToolboxDraggableItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:AppSolutions.Desktop.Designer.UI.DocumentControls.Layouting"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100"
             MouseMove="UserControl_MouseMove" 
             PreviewGiveFeedback="UserControl_PreviewGiveFeedback">
    <StackPanel Orientation="Horizontal">
        <!--<telerik:EventToCommandBehavior.EventBindings>
            <telerik:EventBinding EventName="MouseMove" Command="{Binding MouseMoveCommand}" PassEventArgsToCommand="True" />
        </telerik:EventToCommandBehavior.EventBindings>-->
        <svgc:SvgViewbox Source="{Binding SvgIcon}" Height="15" Width="15" VerticalAlignment="Center" />
        <Label Content="{Binding Name}" VerticalAlignment="Center" VerticalContentAlignment="Center" />
    </StackPanel>
</UserControl>
